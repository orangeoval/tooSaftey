{
    "manifest_version": 2,
    "name": "TooSaftey",
    "description": "Re-Route to https if available",
    "version": "1.0",
    "permissions": [
        "tabs",
        "<all_urls>",
        "notifications",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_icon": "/img/icon_default.png",
        "default_popup": "/html/popup.html"
    },
    "background": {
        "scripts": [
            "/js/jquery-latest.min.js",
            "/js/eventPage.js",
            "/js/functions.js"
        ],
        "persistent": false
    }
}
